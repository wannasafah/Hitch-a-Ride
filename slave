pipeline{
    agent any
    environment {
        PATH = "$PATH:/usr/local/bin"
    }
    stages{
        stage("init"){
            steps{
                sh 'docker stop $(docker ps -aq) || true'
                sh 'docker rm $(docker ps -aq) || true'
                sh 'docker rmi $(docker images -q) || true'
            }
        }
        stage("pull"){
            steps{
                 withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'DOCKER_PWD', usernameVariable: 'DOCKER_USER')]) {
                    echo "pulling new image"
                    sh 'docker login -u ${DOCKER_USER} -p ${DOCKER_PWD}'
                    sh 'docker pull wannasafah/img_backend:lastest'
                    sh 'docker pull wannasafah/img_frontend:lastest'
                }
               
            }
        }
        stage("work"){
            steps{
                echo "running image"
                sh 'docker run -d --name backend -p 4000:4000 wannasafah/img_backend:lastest'
                sh 'docker run -d --name frontend -p 3000:3000 wannasafah/img_frontend:lastest'
            }
        }
    }
}